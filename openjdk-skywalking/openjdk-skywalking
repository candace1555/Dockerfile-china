FROM openjdk:latest
MAINTAINER 1071858797@qq.com
ARG SKYWALKING_VERSION=6.5.0
RUN curl -o apache-skywalking.tar.gz https://mirrors.tuna.tsinghua.edu.cn/apache/skywalking/${SKYWALKING_VERSION}/apache-skywalking-apm-${SKYWALKING_VERSION}.tar.gz && \
    tar zxf apache-skywalking.tar.gz && \
	mv apache-skywalking-apm-bin/agent /opt && \	
	rm -rf apache-skywalking*
CMD java -javaagent:/opt/agent/skywalking-agent.jar -jar yourApp.jar